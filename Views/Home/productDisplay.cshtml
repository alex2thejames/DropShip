<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {box-sizing:border-box}

        /* Slideshow container */
        .slideshow-container {
        max-width: 700px;
        position: relative;
        margin: auto;
        }

        /* Hide the images by default */
        .mySlides {
            padding: 0 30px 0 30px;
            display: none;
        }

        /* Next & previous buttons */
        .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        margin-top: -22px;
        padding: 16px;
        color: white;
        font-weight: bold;
        font-size: 18px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
        user-select: none;
        }

        /* Position the "next button" to the right */
        .next {
        right: 0;
        border-radius: 3px 0 0 3px;
        }

        /* On hover, add a black background color with a little bit see-through */
        .prev:hover, .next:hover {
        background-color: rgba(0,0,0,0.8);
        }

        /* Caption text */
        .text {
        color: #f2f2f2;
        font-size: 15px;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        text-align: center;
        }

        /* Number text (1/3 etc) */
        .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
        }

        /* The dots/bullets/indicators */
        .dot {
        cursor: pointer;
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
        }

        .active1, .dot:hover {
        background-color: #717171;
        }

        /* Fading animation */
        .fade {
            -webkit-animation-name: fade;
            -webkit-animation-duration: 1.5s;
            animation-name: fade;
            animation-duration: 1.5s;
            animation-fill-mode: forwards;
        }
        .pDesc {
            max-width: 700px;
            margin: auto;
            padding: 0 20px 0 20px;
            text-align: center;
        }
        .buyButtonStyle {
            max-width: 175px;
            margin: auto;
            cursor: pointer;
        }
        .buyButtonStyle :active {
            max-width: 172px;
        }
        #purchaseMenu {
            height: 75%;
            width: 75%;
            max-width: 700px;
            border: 1px solid rgba(0, 0, 0, 0.3); 
            border-radius: 20px;
            box-shadow: 0.5px 0.5px;
            text-align: center;
            display: none;
            position: relative;
            margin: 0;
            position: absolute;
            top: 55%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
        @@-webkit-keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
        }

        @@keyframes fade {
        from {opacity: .4}
        to {opacity: 1}
        }
        .hideObject {
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s 1s, opacity 1s linear;
        }
        .showObject {
            visibility: visible;
            opacity: 1;
            transition: visibility 1s 0s, opacity 1s linear;
            
        }
        #quantitySelector {
            height: 100%;
            width: 54%;
            vertical-align: middle;
            text-align: center;
            font-size: 4vh;
            border: 0px;
            border-left: 1px solid #6c757d;
            border-right: 1px solid #6c757d;
        }
        .btn-outline-secondary {
            height: 100%;
            width: 23%;
            font-size: 4vh;
            border: 0px !important;
            margin: 0 -5px 0 -5px;
        }
        .btnL {
            padding-right: 0px
        }
        .btnR {
            padding-left: 0px
        }
        #quantitySelectorBox {
            height: 5em;
            width: 100%;
            margin: auto;
            border-bottom: 1px solid #6c757d;
            border-radius: 3px;
        }
        #purchaseBox {
            height: 17em;
            width: 80%;
            margin: auto;
            border: 1px solid #6c757d;
            border-radius: 7px;
        }
        #purchaseForm {
            transform: translateY(60%);
        }
        .buttons {
            margin-top: 10vh !important;
            width: 40%;
            margin: auto;
        }
        .buttonStyle2 {
            height: 30px;
            width: 100%;
            margin-bottom: 1vh !important;
            background-color: transparent;
            border-radius: 8px;
            color: #393b3d;
            float: left;
            padding: 0;
            cursor: auto;
            font: 14px Arial, Helvetica;
            font-weight: 300;
            border: 1px solid gray;
        }
        .item-line {
            margin-top: 4vh;
        }

        .item-label {
            float: left;
            margin-left: 2vw;
        }

        .item-amount {
            float: right;
            margin-right: 2vw;
            font-weight: bold;
        }
    </style>
</head>
<body>
    @* <h1 style="background: yellow;">Under Construction!</h1> *@
    <!-- Slideshow container -->
    <div class="buy-hide slideshow-container hide">

        <!-- Full-width images with number and caption text -->
        @for(var i = 0; i < ViewBag.CurrProduct.NumberOfImgs; i++){
            <div class="mySlides fade">
                @* <div class="numbertext">1 / 3</div> *@
                <img src="~/media/@ViewBag.CurrProduct.ProductName/@(i).jpg" style="width:100%">
                @* <div class="text">Caption Text</div> *@
            </div>
        }
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
        @for(var i = 0; i < ViewBag.CurrProduct.NumberOfImgs; i++){
        <span class="dot buy-hide" onclick="currentSlide(@(i+1))"></span>
        }
    </div>
    <div class="pDesc buy-hide">
        <p>@ViewBag.CurrProduct.ProductDescription</p>
    </div>
    <div class="buyButtonStyle buy-hide" id="buyButton">
        <img src="~/media/site-images/buy_button_image.png" style="width:100%">
    </div>


    @* purchase popup  *@
    <div id="purchaseMenu" class="fade">
        <form id="purchaseForm" class="my-2 my-lg-0" asp-action="AddToCart" asp-controller="Home" method="post">
            <div id="purchaseBox">
                <div id="quantitySelectorBox">
                    <button id="subtractQuantity" class="btn btn-outline-secondary btn-sm btnL" type="button">-&nbsp;</button>
                    <input id="quantitySelector" type="number" name="Quantity" value="1">
                    <input type="hidden" name="ProductId" value="@ViewBag.CurrProduct.ProductId">
                    <button id="plusQuantity" class="btn btn-outline-secondary btn-sm btnR" type="button">&nbsp;+</button>
                </div>
                <div class="item-line">
                    <div class="item-label">@ViewBag.CurrProduct.ProductName x 
                        <span id="quantity">1</span>
                    </div>
                    <div class="item-amount">$<span id="quantityPrice">@ViewBag.CurrProduct.ProductPrice</span></div>
                </div>
                <div class="buttons">
                    <button id="addToCart" class="buttonStyle2" type="submit">Add To Cart</button>
                    <button id="cancelAdd" class="buttonStyle2" type="button">Go Back</button>
                </div>
                </form>
            </div>
    </div>


    <script>
        var slideIndex = 1;
        showSlides(slideIndex);

        // Next/previous controls
        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        // Thumbnail image controls
        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dot");
        if (n > slides.length) {slideIndex = 1}
        if (n < 1) {slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active1", "");
        }
        slides[slideIndex-1].style.display = "block";
        dots[slideIndex-1].className += " active1";
        }
        $('#quantitySelector').prop('readonly', true);
        $('#quantitySelector').prop('disabled', false);
        $('#buyButton').click(function(){
            $('.buy-hide').removeClass('showObject');
            $('.buy-hide').addClass('hideObject');
            $('#purchaseMenu').show();
            $(this).hide();
        });
        $('#cancelAdd').click(function(){
            $('.buy-hide').removeClass('hideObject');
            $('.buy-hide').addClass('showObject');
            $('#purchaseMenu').hide();
            $('#buyButton').show();
        });
        $('#plusQuantity').click(function(){
            var quantityNum = document.getElementById('quantitySelector').value;
            document.getElementById('quantitySelector').value = parseInt(quantityNum) + 1;
            document.getElementById('quantity').innerHTML = parseInt(quantityNum) + 1;
            document.getElementById('quantityPrice').innerHTML = @ViewBag.CurrProduct.ProductPrice * (parseInt(quantityNum) + 1);
        });
        $('#subtractQuantity').click(function(){
            var quantityNum = document.getElementById('quantitySelector').value;
            if(quantityNum > 1){
                document.getElementById('quantitySelector').value = quantityNum - 1;
                document.getElementById('quantity').innerHTML = quantityNum - 1;
                document.getElementById('quantityPrice').innerHTML = @ViewBag.CurrProduct.ProductPrice * (parseInt(quantityNum) - 1);

            }
        });
    </script>
</body>
</html>