        }
        :-moz-placeholder { /* Firefox 18- */
            color: rgba(75,149,200,0.7);
        }
        .abf {
            white-space: nowrap;
        }
        .sideBarL {
            height: 100%;
            width: 5%;
            max-width: 10px;
            background-color: rgb(75,149,200);
            top: 0;
            bottom: 0;
            left: 0;
            position:fixed;
        }
        .sideBarR {
            height: 100%;
            width: 5%;
            max-width: 10px;
            background-color: rgb(75,149,200);
            top: 0;
            bottom: 0;
            right: 0;
            position:fixed;
        }
