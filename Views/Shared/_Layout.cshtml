        #login {
            margin-right: -2px;
        }

        #login-content {
            width: 16.6em;
            margin-top: 30px;
            display: none;
            position: absolute;
            top: 24px;
            right: 0;
            z-index: 999;
            background: #fff;
            padding: 15px;
            box-shadow: 0 0 8px 0 rgba(0,0,0,.1);
            border-radius: 3px 0 3px 3px;
        }

            #login-content:after, #login-content:before {
            bottom: 100%;
            left: 83%;
            border: solid transparent;
            content: " ";
            @* height: 0;
            width: 0; *@
            position: absolute;
            pointer-events: none;
        }

        #login-content:after {
            border-bottom-color: #fff;
            border-width: 10px;
        }
        
        #inputs input {
            background: hsla(0, 0%, 100%, 0.9);
            color: #606162;
            padding: 6px 5px;
            margin: 0 0 10px 0;
            width: 238px;
            border: 1px solid rgba(57, 59, 61, .2);
            border-radius: 8px;
        }

        #inputs input:focus {
            background: hsla(0, 0%, 100%, 0.9);
            border-color: rgba(0, 0, 0, 0.3);
            outline: none;
            box-shadow: 0 0 0 1px #e8c291 inset;
        }

        #login #actions {
            @* margin: 10px 0 0 0; *@
        }

        #submitLogin {
            height: 30px;
            width: 238px;
            background-color: transparent;
            border-radius: 8px;
            color: #393b3d;
            float: left;
            padding: 0;
            cursor: auto;
            font: 14px Arial, Helvetica;
            font-weight: 300;
            border: 1px solid gray;
        }
        
        #submitLogin:hover,
        #submitLogin:focus {
            border: 1px solid #393b3d;
        }

        #submitLogin:active {
            outline: none;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.5) inset;
        }

        #label {
            float: right;
            line-height: 30px;
        }

        #label input {
            position: relative;
            top: 2px;
            right: 2px;
        }
        .my-2 {
            margin-left: 7px;
        }
        #register {
            display: block;
            text-align: center;
            text-decoration: underline;
            margin-top: 35px;
            margin-bottom: -7px;
            color: black;
        }
        ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
                color: rgba(75,149,200,0.7);
        }
        ::-moz-placeholder { /* Firefox 19+ */
            color: rgba(75,149,200,0.7);
        }
        :-ms-input-placeholder { /* IE 10+ */
